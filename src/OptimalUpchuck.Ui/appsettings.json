{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=optimalupchuck;Username=optimalupchuck;Password=optimalupchuck_dev_password"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "optimalupchuck",
    "Password": "optimalupchuck_dev_password",
    "VirtualHost": "optimalupchuck",
    "ConnectionTimeout": 30000,
    "RequestedHeartbeat": 60
  },
  "SemanticKernel": {
    "OllamaApiUrl": "http://localhost:11434",
    "DefaultModel": "llama3.2",
    "RequestTimeout": 120000,
    "MaxRetries": 3
  },
  "AgentConfiguration": {
    "StatisticsAgent": {
      "AutonomyLevel": "FullyAutonomous",
      "ConfidenceThreshold": 0.95,
      "Model": "llama3.2",
      "Temperature": 0.1,
      "MaxTokens": 500
    },
    "BloggingAgent": {
      "AutonomyLevel": "ReviewRequired", 
      "ConfidenceThreshold": 0.75,
      "Model": "llama3.2",
      "Temperature": 0.3,
      "MaxTokens": 1000
    }
  },
  "ObsidianVault": {
    "RawVaultPath": "C:\\Obsidian\\Raw",
    "PristineVaultPath": "C:\\Obsidian\\Pristine",
    "WatchEnabled": true,
    "FileExtensions": [".md"],
    "ExcludePatterns": [".*", "_*", "temp*"]
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "Timeout": 30
    },
    "RabbitMQ": {
      "Enabled": true,
      "Timeout": 30
    },
    "Ollama": {
      "Enabled": true,
      "Timeout": 30
    }
  }
}
